#include<stdio.h>
#include<conio.h>
void main()
{
        int number,increase=0,
        clrscr();
        printf("enter the number");
        scanf("%d",&number); 
        for(increase=0;increase<=number;increase++)
        {
                if(number%increase==0)
                 break;
        }
        if(number==increase)
        {
               printf("number is prime");
        }
        else
        {
               printf("number is not prime");
        }
         getch();
}         
