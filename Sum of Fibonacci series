#include<stdio.h>
#include<conio.h> 
void main(void) 
{ 
       int number,increase=3,first=0,second=1,third,sum=0; 
       clrscr(); 
       prinrf("enter the number");
       scanf("%d",&number); 
       printf("%d",first); 
       printf("%d",second); 
       while(number>0) 
       { 
             third=first+second; 
             first=second;
             second=third; 
             sum=sum+third;
             increase=increase+1;
        } 
        printf("%d",sum); 
        getch();
}
