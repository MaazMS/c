#include<stdio.h>
#include<conio.h>
void main()
{
      int number,increase=0,sum=0;
      clrscr();
      printf("enter the number");
      scanf("%d",&number);
      while(increase<number)
      {
             increase=increase+1;
             sum=sum+increase;
            
       }
       printf("%d",sum);
       getch();
}
